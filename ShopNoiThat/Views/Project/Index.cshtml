                            jQuery('html,body').animate({ scrollTop: jQuery(this.hash).offset().top }, 1000);
                            $('.design ul.ul.ul-tab li').removeClass("active");
                            $(this).parent('li').addClass("active");
                            return false;
                            e.preventDefault();
                        });
