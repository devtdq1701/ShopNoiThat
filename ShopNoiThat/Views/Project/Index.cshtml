                    </div>
                </div>
                <link href="/Assets/Client/css/lightslider.min.css" rel="stylesheet" />
                <script src="/Assets/Client/js/lightslider.min.js"></script>
                <script>
                    $(document).ready(function () {
                        var item = 3;
                        var wid = $(window).width();
                        if (wid < 768) {
                            item = 1;
                        }
                        $(".list-team").lightSlider({
                            item: item,
                            pager: false,
                            slideMargin: 0,
