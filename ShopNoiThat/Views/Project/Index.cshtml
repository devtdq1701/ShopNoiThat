                <div id="HandBook">
                    <div class="title text-center">
                        <h2>Cẩm nang nh&#224; đẹp</h2>
                    </div>
                    <div class="slider-news slider">
                        @foreach (var item in News)
                        {
                            <div class="item">
                                <div class="img over">
                                    <a href="/bai-viet/@item.MetaTitle-@item.ID" title="@item.Title">
                                        <img src="@item.Image" alt="" title="@item.Title">
                                    </a>
                                </div>
                                <div class="spen-item over">
                                    <span class="nur">
                                        <label>@item.CreatedDate.Value.Day.ToString()</label>@item.CreatedDate.Value.ToString("MMM")
                                    </span>
                                    <h4><a href="/bai-viet/@item.MetaTitle-@item.ID" title="@item.Title">@item.Title</a></h4>
                                    <p><span>by</span> Nh&#224; Đẹp, <span>in</span> Blog tư vấn</p>
                                </div>
                            </div>
                        }
                    </div>
                    <script type="text/javascript">
                        var items = 3;
                        if ($(window).width() < 990) {
                            items = 3;
                        }
                        if ($(window).width() < 500) {
                            items = 1;
                        }
                        $(document).ready(function () {
                            $(".slider-news").slick({
                                slidesToShow: items,
                                slidesToScroll: 1,
                                autoplay: false,
                                autoplaySpeed: 2000,
                            });
                        });
                    </script>
                </div>
            </div>
        </div>
        <!-- end design -->
    </div>
</div>
<!-- end main-content -->
<script>
    $(document).ready(function () {
        $("#contact-form").validate({
            rules: {
                FullName: { required: true },
                Comment: { required: true },
                Mobile: { required: true, number: true },
                Email: { required: true, email: true, },
            },
            messages: {
                FullName: { required: "*", },
                Comment: { required: "*", },
                Mobile: { required: "*", number: "*", },
                Email: { required: "*", email: "*", },
            },
            submitHandler: function () {
                var d = $("#contact-form").serialize();
                $("#btn-contact").unbind("click").text("Đang gửi...");
                var url = "/Project/SendContact";
                $.post(url, d, function (msg) {
                    if (msg.Erros == false) {
                        //swal(msg.Title, msg.msg, "success"); $("#btn-contact").text("Gửi đi");
                        $('#alrt').slideDown();
                        setInterval(function () { window.location.reload(); }, 5000);
                    } else {
                        swal(msg.Title, msg.msg, "error");
                        $("#btn-contact").text("Gửi đi");
                    }
                }, "json");
            }
        });
    });
</script>
