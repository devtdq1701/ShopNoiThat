@model List<Model.EF.ProductCategory>
<ul class="mainMenu ul">
    <li class="logo-menu">
        <a href="/" title="Công ty TNHH Thương mại và Nội thất Nhà Đẹp">
            <img src="/Assets/Client/img/noi-that-nha-dep.png" alt="Công ty TNHH Thương mại và Nội thất Nhà Đẹp" title="Công ty TNHH Thương mại và Nội thất Nhà Đẹp">
        </a>
    </li>
    @foreach (var item in Model.Where(x => x.ParentID == null))
    {
        var child = Model.Where(x => x.ParentID == item.ID);
        <li>
            <a href="/@item.MetaTitle-@item.ID" title="@item.Title">
                @item.Title
                <i class="fa fa-caret-down" aria-hidden="true"></i>
            </a>
            <div class="sub">
                <div class="sub-left">
                    <div class="item">
                        <ul class="ul">
                            @foreach (var childItem in child)
                            {
                                <li><a href="/@childItem.MetaTitle-@childItem.ID" title="@childItem.Title">@childItem.Title</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </li>
    }
    <li>
        <a href="/thiet-ke-noi-that" title="Thiết kế nội thất">
            Thiết kế nội thất
        </a>
    </li>
    <li>
        <a href="/blog-tu-van" title="Blog tư vấn">
            Blog tư vấn
        </a>
    </li>
</ul>